<div class="row m-t-lg">
  <div class='col-xs-1 text-center'>
    <h3 class='no-margins'>
      <div {{ action 'upVote' }} class='row text-center'>
        {{ fa-icon 'caret-up' class='font-xlg gray-text' }}
      </div>
      <div class='row text-center'>
        {{ answer.votesCount }}
      </div>
      <div {{ action 'downVote' }} class='row text-center'>
        {{ fa-icon 'caret-down' class='font-xlg gray-text'}}
      </div>
    </h3>
  </div>
  <div class="col-xs-11 padding-top-xs">
    <p>
      {{ answer.text }}
    </p>
    <div class="row">
      <div class="col-xs-12 grey-text">
        <small>
          {{ moment-from-now comment.createdAt }}
        </small>
      </div>
    </div>
    {{ comment-box getComments="getComments" postComment='postComment' commentable=answer commentableType="answer" }}
  </div>
</div>