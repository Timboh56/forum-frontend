<div class="row">
  <div class="col-sm-12 search-bg">
    <form class="form-horizontal">
      <div class="form-group">
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Search for a question topic">
          <button type="button" class="btn btn-link" id="show_post">Post a new question</button>
        </div>
        <div class="col-sm-2 pull-in">
          <button type="submit" class="btn btn-default btn-block" disabled="disabled">Search</button>
        </div>
      </div>
      <div class="form-group" style="display:none;" id="post_question">
        <div class="col-sm-10">
          <input class="form-control question" type="text" placeholder="Post a new question" maxlength="100">
          <ul class="list-inline">
            <li>
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Post anonymously
                </label>
              </div>
            </li>
            <li>                    
              <button type="button" class="btn btn-link" id="close_post">Close post</button>
            </li>
          </ul>
        </div>
        <div class="col-sm-2 pull-in">
          <button type="submit" class="btn btn-theme btn-block">Post</button>
        </div>
      </div>
    </form>
  </div>
</div>