<div class='m-t-lg'>
  <td class="col-sm-1">

    <button {{ action 'bookmarkQuestion' question }} class='btn btn-proceed' type="button">
      <span class="fa fa-leaf fa-lg"></span>
      <br>
    </button>
  </td>
  <td class="col-sm-10 no-margin-bottom">
    <h4 class="m-top-none">
      <strong>
        {{ question.title }}
      </strong>
    </h4>
    <div class="media">
      <div class="col-xs-1">
        <img alt="user" src="/assets/img/groups/roberthalf.png" class="img-circle introImagePanel">
      </div>
      <div class="col-xs-11">
        <h5 class="media-heading">
          {{ question.text}}
        </h5>
        <p>
          {{ question.content }}
        </p>
      </div>
    </div>
    <ul class="list-inline no-margin-bottom m-t-lg">
      <li>
        <p class="grey-text">
          <small>
            <i class="fa fa-flag">&nbsp;</i> {{ moment-from-now question.createdAt }}
          </small>
        </p>
      </li>
      <li>
        <p class="grey-text">
          <small>
            <a {{ action 'toggleAnswers' }} style="color:inherit;" class="answer_comment">
              <i class="fa fa-comment">&nbsp;
              </i> {{ question.answers.length }} answers
            </a>
          </small>
        </p>
      </li>
    </ul>
    {{#if showAnswers }}
      <div class='m-t-lg'>
        <h4> Answers </h4>
      </div>
      {{#each question.answers as |answer| }}
        <div class="media m-t-lg">
          <div class="col-xs-offset-1 col-xs-11">
            <p>
              {{ answer.text }}
            </p>
            <div class="row">
              <div class="col-xs-12 grey-text">
                <small>
                  {{ moment-from-now comment.createdAt }}
                </small>
              </div>
            </div>
            {{ comment-box getComments="getComments" postComment='postComment' commentable=answer commentableType="answer" }}
          </div>
        </div>
      {{/each}}
    {{/if}}
    <hr class='no-margin-bottom m-t-sm' />
  </td>
  <td class="col-sm-1 text-center">
    <p>
      <a {{ action 'bookmarkQuestion'}} class="grey-text">
        <small>
          {{ fa-icon 'bookmark' question }}
          <div class="m-t-sm">
            Bookmark
          </div>
        </small>
      </a>
    </p>
  </td>
</div>