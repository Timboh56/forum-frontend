<div class="row p-t-lg p-b-lg search-forums-container">
  <div class="col-sm-6 search-bg">
    <form class="form-horizontal no-margins">
      <div class="form-group no-margin-top no-margin-bottom">
        <div class="col-xs-12 col-sm-10">
          {{input type='text' value=keywords placeholder='Search for a question topic' class='form-control' }}
        </div>
        <div class="hidden-xs col-sm-2 pull-in">
          <button type="submit" {{ action 'search' }} class="btn-fa btn btn-default">
            {{ fa-icon 'search'}}
          </button>
        </div>
      </div>
      <div class="visible-xs form-group">
        <div class='col-xs-12'>
          <button type="submit" {{ action 'search' }}class="form-control btn btn-default btn-block">
            <img src='/assets/img/icons/search.png' class='tiny-icon' /> Search
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class='col-sm-6'>
    <ul class="hidden-xs visible-sm visible-md visible-lg visible-xlg nav navbar-nav navbar-right">
      <li class='top-nav-btn-li'>
        {{#link-to 'forum.bookmarks' class='btn-header'}}

          {{ fa-icon 'bookmark'}} bookmarks
        {{/link-to}}
      </li>
      <li class='top-nav-btn-li'>
        {{#link-to 'forum.questions' class='btn-header'}}
          {{ fa-icon 'question' }} questions
        {{/link-to}}
      </li>
      <li class='top-nav-btn-li'>
        {{#link-to 'user' currentUser class='btn-header'}}
          {{ fa-icon 'user' }} me
        {{/link-to}}
      </li>
      <li class='top-nav-btn-li'>
        {{#link-to 'forum.questions.new' class='btn-header btn-orange'}}
          ask
        {{/link-to}}
      </li>
    </ul>
  </div>
</div>
<div class='fade-in {{ if hideResults 'hide' }} form-group row search-results-container padding-bottom-lg box-shadow'>
  <div class='m-t-md search-results-inner-padding fast-transition'>
    <h4 class='no-margins'> {{ model.length }} Search Result(s) </h4>
    <br />
    {{#each model as |question|}}
      {{ question-container question=question postComment="postComment" getComments="getComments" goToQuestion='goToQuestion' }}
    {{/each}}
  </div>
</div>