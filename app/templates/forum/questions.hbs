{{ liquid-outlet }}

<div class="row">
  <div class="col-sm-12 no-padding">
    {{#link-to 'forum.questions.new' class='btn btn-default'}} New Question {{/link-to}}
  </div>
</div>

{{forum-header questions=true }}
<div class="tab-content p-top">
  <div class='container'>
    <h1>Questions</h1>
    <div role="tabpanel" class="tab-panel active" id="qa">
      <div class="col-sm-12">
        
        <div id="mainTable">
          <table class="table-simple">
            <tbody>
              {{#each model as |question|}}
                {{ question-container question=question postComment="postComment" getComments="getComments" }}
              {{/each}}
            </tbody></table>
          </div>
        
      </div>  
    </div>
  </div>
</div>