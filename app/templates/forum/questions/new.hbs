<div class="col-sm-12 search-bg">
  <form class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-10">
        <h2>New Question</h2>
      </div>
      <div class="col-sm-2 text-right">
        {{#link-to 'forum' class='larger-text' }} {{ fa-icon 'remove'}} {{/link-to}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        {{input type='text' class='form-control' value=model.text placeholder="I don't understand Fibonnacci. Could you please explain it to me?"  }}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{textarea class='form-control' value=model.content value="I have a test coming up and I need to understand Fibonnaci" }}
      </div>
      <div class="col-sm-2">
        <button class='btn btn-default' {{ action 'createQuestion' }}>Submit</button>
      </div>
    </div>
  </form>
</div>
