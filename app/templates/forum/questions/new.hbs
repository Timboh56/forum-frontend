<link rel="stylesheet" href="/assets/css/bootstrap-tags.css">

<div class="col-sm-12">
  <form class="form-horizontal">
    <div class="form-group m-t-lg">
      <div class="col-sm-10">
        <h3>New Question</h3>
      </div>
      <div class="col-sm-2 text-right h5 close-btn">
        {{#link-to 'forum.questions' class='larger-text' }}
          {{ fa-icon 'remove'}}
        {{/link-to}}
      </div>
    </div>
    <div class="form-group m-t-lg">
      <div class="col-md-1 col-sm-12">
        <label>
          Title
        </label>
      </div>
      <div class="col-md-10 col-sm-12">
        {{input type='text' required=true class='form-control' value=model.title placeholder="I don't understand Fibonnacci. Could you please explain it to me?"  }}
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-1 col-sm-12">
        <label>
          Tags
        </label>
      </div>
      <div class="col-md-10 col-sm-12">
        <div class='tags-input'></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-1 col-md-10 col-sm-12">
        {{summer-note height=contentHeight btnSize=bs-sm content=model.text airMode=false focus=false header="Example" disabled=editingDisabled disabledOptions=disabledOptions}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-1 col-md-10 col-sm-12">
        <button class='btn btn-default' {{ action 'createQuestion' }}>Submit</button>
        <button class='btn btn-remove' {{ action 'cancel' }}>Cancel</button>
      </div>
    </div>
  </form>
</div>
