<div class='container-fluid'>
  <div class='col-xs-12 col-md-4 col-md-offset-4'>
    <div class='row text-center'>
      <div class='col-xs-12'>
        <form role='form' {{action 'authenticate' on="submit"}} class=''>
          <div class='row form-group m-t-lg'>
            <label>
              Email:
            </label>
            {{input value=email type="text" class='form-control'}}
          </div>
          <div class='row form-group m-t-lg'>
            <label>
              Password:
            </label>
            {{input value=password type="password" class='form-control' }}
          </div>
          <div class='form-group m-t-lg'>
            <button {{ action 'login' }} type="submit" class='btn btn-default'>Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
